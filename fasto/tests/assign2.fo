fun int mul(int x, int y) = 
  if (x == 0) then
    0
  else 
    if (0 < x) then
      y + (mul(x-1,y))
    else 
      0-y + (mul(x+1,y))

fun int readInt(int i) = read(int)

fun int diff(int i, [int] arr, int len) = 
    if (i == 0) then
      arr[i] - arr[len-1]
    else 
      arr[i] - arr[i-1]

fun int sq (int x, int y) =
  x + mul(y,y)
  
fun int main() =
  let n = read(int) in 
  if (n < 1) 
    then
      let incorrect = write("Incorrect Input!") in
      0 
    else 
      let arr = iota(n) in
      let arr = map(readInt, arr) in
      let indexes = iota(n) in
      let difs = map(fn int (int i) => diff(i, arr, n), indexes) in
      let result = reduce(sq, 0 , difs) in
        write(result)